<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listAnimaTick"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@color/lightGrey"
    android:orientation="horizontal"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageAnimal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/baboon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Baboon"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:justificationMode="none"
                android:text="Baboons are Old World monkeys belonging to the genus Papio, part of the subfamily Cercopithecinae which are found natively in very specific areas of Africa and the Arabian Peninsula. The five species are some of the largest non-hominoid members of the primate order; only the mandrill and the drill are larger." />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>